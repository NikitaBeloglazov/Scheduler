<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_gray_bg_tint"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/entry_settings_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Settings for..."
            android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
            android:textColor="?colorTertiary"
            tools:ignore="HardcodedText" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/show_on_lock_state"
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/settings_state_symbol"
                    android:textAlignment="center"

                    android:textAppearance="@style/MediumHeading"
                    android:textStyle="bold" />

                <prototype.xd.scheduler.views.Switch
                    android:id="@+id/show_on_lock_switch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_show_items_lock"
                    android:textAppearance="@style/SmallHeading"
                    tools:ignore="TextContrastCheck" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/hide_by_content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/hide_by_content_switch_state"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/settings_state_symbol"

                        android:textAlignment="center"
                        android:textAppearance="@style/MediumHeading"
                        android:textStyle="bold" />

                    <prototype.xd.scheduler.views.Switch
                        android:id="@+id/hide_by_content_switch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/hide_by_content"
                        android:textAppearance="@style/SmallHeading"
                        tools:ignore="TextContrastCheck" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/separate_multiple_statements_by"
                    android:textAppearance="@style/SmallHeadingSubtext" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/hide_by_content_field_state"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/settings_state_symbol"
                        android:textAlignment="center"

                        android:textAppearance="@style/MediumHeading"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/hide_by_content_field"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/content"
                        android:importantForAutofill="no"
                        android:inputType="text"
                        android:textAppearance="@style/SmallHeading"
                        tools:ignore="TouchTargetSizeCheck" />
                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/priority_state"
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/settings_state_symbol"
                    android:textAlignment="center"

                    android:textAppearance="@style/MediumHeading"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/priority_description"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/settings_priority"
                        android:textAppearance="@style/SmallHeading"
                        tools:ignore="TextContrastCheck" />

                    <com.google.android.material.slider.Slider
                        android:id="@+id/priority_bar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stepSize="1.0"
                        android:value="0"
                        android:valueFrom="0"
                        android:valueTo="40"
                        tools:ignore="SpeakableTextPresentCheck" />

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/adaptive_color_balance_state"
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/settings_state_symbol"
                    android:textAlignment="center"

                    android:textAppearance="@style/MediumHeading"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/adaptive_color_balance_description"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/settings_adaptive_color_balance"
                        android:textAppearance="@style/SmallHeading" />

                    <com.google.android.material.slider.Slider
                        android:id="@+id/adaptive_color_balance_bar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:value="0.0"
                        android:valueFrom="0.0"
                        android:valueTo="10.0"
                        android:stepSize="1.0"
                        tools:ignore="SpeakableTextPresentCheck" />

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/settings_colors"
                    android:textAppearance="@style/MediumHeading"
                    tools:ignore="TextContrastCheck" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="?android:attr/listDivider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/background_color_state"
                            android:layout_width="15dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/settings_state_symbol"
                            android:textAlignment="center"

                            android:textAppearance="@style/MediumHeading"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/font_color_state"
                            android:layout_width="15dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/settings_state_symbol"
                            android:textAlignment="center"

                            android:textAppearance="@style/MediumHeading"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/border_color_state"
                            android:layout_width="15dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/settings_state_symbol"
                            android:textAlignment="center"

                            android:textAppearance="@style/MediumHeading"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/settings_bg_color"
                            android:textAppearance="@style/SmallHeading" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/settings_text_color"
                            android:textAppearance="@style/SmallHeading" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/settings_border_color"
                            android:textAppearance="@style/SmallHeading" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/backgroundColor"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="5dp"
                            app:cardCornerRadius="25dp"
                            app:cardElevation="5dp"
                            app:strokeWidth="0dp"/>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/fontColor"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="5dp"
                            app:cardCornerRadius="25dp"
                            app:cardElevation="5dp"
                            app:strokeWidth="0dp" />

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/borderColor"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="5dp"
                            app:cardCornerRadius="25dp"
                            app:cardElevation="5dp"
                            app:strokeWidth="0dp" />

                    </LinearLayout>

                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="?android:attr/listDivider" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/light_gray_bg_tint"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <LinearLayout
                            android:id="@+id/preview_border_upcoming"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/preview_text_upcoming"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingBottom="3dp"
                                android:text="@string/settings_preview_upcoming"
                                android:textAppearance="@style/SmallHeading" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/preview_border"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/preview_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingBottom="3dp"
                                android:text="@string/settings_preview_current"
                                android:textAppearance="@style/SmallHeading" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/preview_border_expired"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/preview_text_expired"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingBottom="3dp"
                                android:text="@string/settings_preview_expired"
                                android:textAppearance="@style/SmallHeading" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="?android:attr/listDivider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/bevel_size_state"
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/settings_state_symbol"
                        android:textAlignment="center"

                        android:textAppearance="@style/MediumHeading"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/bevel_thickness_description"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="@string/settings_border_thickness"
                            android:textAppearance="@style/SmallHeading" />

                        <com.google.android.material.slider.Slider
                            android:id="@+id/bevel_thickness_bar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:stepSize="1.0"
                            android:value="3.0"
                            android:valueFrom="0.0"
                            android:valueTo="15.0"
                            tools:ignore="SpeakableTextPresentCheck" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/days_beforehand_state"
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/settings_state_symbol"
                    android:textAlignment="center"

                    android:textAppearance="@style/MediumHeading"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/show_days_beforehand_description"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/settings_show_days_upcoming"
                        android:textAppearance="@style/SmallHeading" />

                    <com.google.android.material.slider.Slider
                        android:id="@+id/show_days_beforehand_bar"
                        style="@style/Widget.AppCompat.SeekBar.Discrete"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stepSize="1.0"
                        android:value="1.0"
                        android:valueFrom="0.0"
                        android:valueTo="14.0"
                        tools:ignore="SpeakableTextPresentCheck" />

                </LinearLayout>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/days_after_state"
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/settings_state_symbol"
                    android:textAlignment="center"

                    android:textStyle="bold"
                    android:textAppearance="@style/MediumHeading" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/show_days_after_description"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/settings_show_days_expired"
                        android:textAppearance="@style/SmallHeading" />

                    <com.google.android.material.slider.Slider
                        android:id="@+id/show_days_after_bar"
                        style="@style/Widget.AppCompat.SeekBar.Discrete"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stepSize="1.0"
                        android:value="1.0"
                        android:valueFrom="0.0"
                        android:valueTo="14.0"
                        tools:ignore="SpeakableTextPresentCheck" />

                </LinearLayout>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/hide_expired_items_by_time_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hide_expired_items_by_time_state"
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/settings_state_symbol"
                    android:textAlignment="center"

                    android:textAppearance="@style/MediumHeading"
                    android:textStyle="bold" />

                <prototype.xd.scheduler.views.Switch
                    android:id="@+id/hide_expired_items_by_time_switch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_hide_expired_entries_by_time"
                    android:textAppearance="@style/SmallHeading" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:id="@+id/group_selector"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="1.5dp"
                android:layout_marginBottom="1.5dp"
                android:layout_weight="150"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/group"
                        android:textAppearance="@style/SmallHeading"
                        tools:ignore="TextContrastCheck" />

                    <prototype.xd.scheduler.views.Spinner
                        android:id="@+id/groupSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="1.5dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="1.5dp"
                android:layout_weight="1"
                app:cardCornerRadius="5dp">

                <ImageView
                    android:id="@+id/addGroup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/settings_add_group"
                    app:srcCompat="@android:drawable/ic_menu_add"
                    tools:ignore="ImageContrastCheck" />

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/settings_reset_button"
                style="@style/DefaultButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/settings_reset_to_defaults" />

            <Button
                android:id="@+id/close_settings_button"
                style="@style/DefaultButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/close" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>