<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <prototype.xd.scheduler.views.Switch
        android:id="@+id/adaptive_bg_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dialog_menu_padding_left_right"
        android:layout_marginTop="@dimen/dialog_menu_padding_top"
        android:layout_marginEnd="@dimen/dialog_menu_padding_left_right"
        android:text="@string/enable_per_day_wallpapers"
        android:textAppearance="@style/MediumHeading"
        tools:ignore="TouchTargetSizeCheck,VisualLintButtonSize" />

    <Button
        android:id="@+id/resetBgButton"
        style="@style/DefaultButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dialog_menu_padding_left_right"
        android:layout_marginEnd="@dimen/dialog_menu_padding_left_right"
        android:text="@string/settings_reset_bg"
        tools:ignore="VisualLintButtonSize" />

    <include
        android:id="@+id/grid_view_include"
        layout="@layout/grid_selection_view" />

</LinearLayout>