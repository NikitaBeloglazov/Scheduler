<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.textfield.TextInputLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/textInputLayout"
    style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/settings_entries_margin_left_right"
    android:layout_marginEnd="@dimen/settings_entries_margin_left_right"
    android:hint="@string/day_default">

    <prototype.xd.scheduler.views.SelectableAutoCompleteTextView
        android:id="@+id/dropdownSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="none"
        tools:ignore="TextContrastCheck,SpeakableTextPresentCheck,VisualLintTextFieldSize" />

</com.google.android.material.textfield.TextInputLayout>

