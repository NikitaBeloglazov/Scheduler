<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/settings_entries_margin_left_right"
    android:layout_marginEnd="@dimen/settings_entries_margin_left_right"
    android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/import_export_data"
        android:textAppearance="@style/SmallHeading" />

    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <ImageButton
        android:id="@+id/imageButton"
        style="@style/DefaultImageButton"
        android:layout_width="@dimen/clickable_icon_size"
        android:layout_height="@dimen/clickable_icon_size"
        android:layout_marginEnd="@dimen/icon_to_text_margin"
        android:layout_weight="0"
        android:contentDescription="@string/export_description"
        app:srcCompat="@drawable/ic_upload_24"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/clickable_icon_size"
        android:layout_height="@dimen/clickable_icon_size"
        android:layout_weight="0"
        android:contentDescription="@string/import_description"
        app:srcCompat="@drawable/ic_download_24" />

</LinearLayout>

