<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorSurface"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".IntroActivity">

    <TextView
        style="@style/LargeHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/permission_request" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/permission_request_description"
        android:textAppearance="@style/LargeHeadingSubtext" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:contentDescription="@string/calendar_access_description"
            app:srcCompat="@drawable/ic_calendar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/calendar_access"
                android:textAppearance="@style/MediumHeading" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/calendar_access_description"
                android:textAppearance="@style/MediumHeadingSubtext" />

            <androidx.cardview.widget.CardView
                android:id="@+id/calendar_permission_granted_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?colorErrorContainer"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/calendar_permission_granted"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="3dp"
                    android:text="@string/permissions_not_granted"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="?colorOnErrorContainer" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:contentDescription="@string/file_access_description"
            app:srcCompat="@drawable/ic_folder" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/file_access"
                android:textAppearance="@style/MediumHeading" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/file_access_description"
                android:textAppearance="@style/MediumHeadingSubtext" />

            <androidx.cardview.widget.CardView
                android:id="@+id/storage_permission_granted_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?colorErrorContainer"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/storage_permission_granted"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="3dp"
                    android:text="@string/permissions_not_granted"
                    android:textColor="?colorOnErrorContainer" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:contentDescription="@string/file_access_description"
            app:srcCompat="@drawable/ic_energy_savings" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ignore_battery_optimization"
                android:textAppearance="@style/MediumHeading" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ignore_battery_optimization_description"
                android:textAppearance="@style/MediumHeadingSubtext" />

            <androidx.cardview.widget.CardView
                android:id="@+id/battery_permission_granted_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?colorErrorContainer"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/battery_permission_granted"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="3dp"
                    android:text="@string/permissions_not_granted"
                    android:textColor="?colorOnErrorContainer" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/grant_permissions_button"
        style="@style/DefaultButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/permissions_grant" />

    <TextView
        android:id="@+id/all_set_text"
        style="@style/LargeHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/all_set"
        android:visibility="gone" />

</LinearLayout>